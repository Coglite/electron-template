{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es6",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "removeComments": true,
    "jsx": "react",
    "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/node_modules"
  ]
}
